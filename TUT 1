#include<stdio.h> 
void main() { 
float rainfall[3][4]; 
float  total=0.0,average=0.0; 
printf("\nEnter rainfall value for 3 cities"); 
for(int c=0;c<3;c++){ 
printf("\n Enter the value for each month of city %d:",c+1); 
for(int m=0;m<4;m++){ 
printf("\n Enter the month %d:", m+1); 
scanf("%f",&rainfall[c][m]); 
} 
} 
printf("\n Rainfall data:\n"); 
printf("Sr.No\tCity\tMonth1\tMonth2\tMonth3\tMonth4\tAverage\n"); 
for (int c = 0; c < 3; c++) { 
total = 0.0; 
printf("%d\tCity %d", c + 1, c + 1); 
for (int m = 0; m < 4; m++) { 
printf("\t%.2f", rainfall[c][m]); 
total += rainfall[c][m]; 
} 
average = total / 4; 
printf("\t%.2f\n", average); 
} 
} 
